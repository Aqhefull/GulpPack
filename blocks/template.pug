include _assets/bemto/bemto
- set_bemto_settings({ modifier: "--" })

include head/head
include header/header
include footer/footer


doctype html
html(lang="ru")
	
	block head
		head
			+head({
				"title": "Gulp Pack",
				"author": "Alexandr Komarevich",
				"description": "Personal Gulp"
			})
			
		+b.BODY.page
			+e.DIV.wrap
				block header
					+header()
				block content
					div content
				block footer
					+footer()
				
			block vendors
				// build:js js/vendor.js
				script( src="libs/jquery/dist/jquery.min.js")
				script( src="libs/wow/dist/wow.min.js")
				// endbuild
			block scripts
				// build:js js/main.js
				script( src="js/main.js")
				// endbuild
